{
  "name": "bun-test",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "yarn run server:dev && yarn run client:dev && node ./dist/server.js",
    "server:dev": "esbuild index.ts --bundle --platform=node --format=esm --packages=external --outfile=dist/server.js",
    "client:dev": "esbuild entry-client.tsx --bundle --outfile=dist/client/entry-client.js",
    "build": "yarn run server:build && yarn run client:build",
    "server:build": "esbuild index.ts --bundle --minify --sourcemap --platform=node --format=esm --packages=external --outfile=dist/server.js",
    "client:build": "esbuild entry-client.tsx --bundle  --minify --sourcemap --outfile=dist/client/entry-client.js"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "esbuild": "^0.19.11"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/react-dom": "^18.2.18",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
